// Represents an absolute value knot in a gradient.
struct fea_knot_info {
	color hcl; // Absolute okhcl color.
	float position; // The knot position on a [0, 1] percentage ramp.
};
void fea_init(output fea_knot_info out) {
	out.hcl = 0;
	out.position = 0.0;
}

