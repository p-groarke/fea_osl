// Mixes (linearly blends) the colors as if equally spaced on a gradient.
// Picks the 2 neighbouring colors of percentage (on this gradient).
color fea_mix(float in_percentage, color in_colors[], int in_arr_size,
		float in_knot_positions[], int in_interpolations[]) {
	int count = min(arraylength(in_colors), in_arr_size);
	if (count <= 0) {
		return color(0);
	}
	if (count == 1) {
		return in_colors[0];
	}

	if (in_percentage < in_knot_positions[0]) {
		return in_colors[0];
	}

	int last_idx = count - 1;
	if (in_percentage >= in_knot_positions[last_idx]) {
		return in_colors[last_idx];
	}



